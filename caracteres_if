#include <stdio.h>

int detectar(char c)
{
if ((c<='a'&& c>='z')||(c<='A'&& c>='A')||(c=='_'))
return 1; else return 0;
}
int main(void)
{
	char c=0;
	printf("Escribe el caracter: \n");
	scanf("%c",&c);
	if (detectar(c))
	printf("El caracter que tecleaste cumple y se trata de una letra o un guion bajo %c",c);
	else
	printf("El caracter que tecleaste NO CUMPLE Y NO ES una letra o un guion bajo");
	return 0;
}
